#:kivy 2.1.0


<Button>:
    background_normal:''
    background_color: (0,0,0,1)
    font_size: 32

<Alarm_by_PranavWidget>:

    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        
        
        
                

        GridLayout:
            cols: 7
            rows: 5
            Widget:
            Widget:
            Widget:
            Widget:
            Widget:
            Widget:
            Widget:
            Button:
                text:""
            TextInput:
                id: I_hr 
                text: ""
                multiline: False
                halign: "right"
                padding_y: 10
                padding_x: 10
                
                font_size: 50

            Button:
                text:"-"


            TextInput:
                text: ""
